@model Tuple<List<DataLayer.Models.Promotions>, int>
@using DataLayer.Models


<div class="panel panel-info">

    <div class="panel-heading">
        <a href="~/Promotions/Index"><h4 class="alert-link">@Model.Item2 promotions en cours!</h4></a>
    </div>
    <div class="panel-body">
        
           <h4> Nos meilleures promotions</h4>
            <ol class="col-lg-12">

                @foreach (var prod in Model.Item1)
                {
                    <li>
                        <a href="~/Hotel/Details/@prod.IdHotel">
                            <div class="alert-info btn-info">@prod.Hotels.Nom</div>
                        </a>
                        <div class="active">@prod.Hotels.Villes.name</div>
                        <div class="active">@prod.Valeur % </div>
                        <div class="active"><strong>Validité:</strong> @prod.DateFin.ToString("dd/MM/yyyy")</div>
                    </li>

                }
            </ol>
        
    </div>

</div>

