@using DataLayer.Models
@model DataLayer.Models.Promotions

@{
    ViewBag.Title = "Ajouter une Promotion";
}

@section scripts {
<script src="~/Scripts/DatePicker/js/bootstrap-datepicker.min.js"></script>
@*<script src="~/Scripts/DatePicker/js/jui.js"></script>*@
<script src="~/Scripts/Admin/Promotion/Create.js"></script>
}

@section styles {
<link href="~/Scripts/DatePicker/css/bootstrap-datepicker3.standalone.min.css" rel="stylesheet" />
@*<link href="~/Scripts/DatePicker/css/jui.css" rel="stylesheet" />*@
}

<h2>Ajouter une promotion</h2>
<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @if (ViewBag.MessageErreur!=null) {
            @Html.ValidationSummary(false, (string) ViewBag.MessageErreur, new { @class = "text-danger" })
        } else {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        }

        <div class="form-group">
            @Html.LabelFor(model => model.IdHotel, "IdHotel", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.DropDownList("IdHotel", null, htmlAttributes: new { @class = "form-control", id="listeDeroulanteHotels" })
                @Html.ValidationMessageFor(model => model.IdHotel, "", new { @class = "text-danger" })
            </div>
            @*Ci-dessous on pourrait rajouter trois select multiple sur Continent , Pays, Ville pour permettre de retrouver l'hotel plus facilement*@
@*            @Html.EnumDropDownListFor(promo=> new SelectList((new Form115Entities()).Villes), new { multiple = "", @class="6"})*@
            @*<div class="col-md-2">
                @Html.DropDownList("IdHotel", null, htmlAttributes: new { @class = "form-control", id = "listeDeroulanteHotels" })
                @Html.ValidationMessageFor(model => model.IdHotel, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.DropDownList("IdHotel", null, htmlAttributes: new { @class = "form-control", id = "listeDeroulanteHotels" })
                @Html.ValidationMessageFor(model => model.IdHotel, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.DropDownList("IdHotel", null, htmlAttributes: new { @class = "form-control", id = "listeDeroulanteHotels" })
                @Html.ValidationMessageFor(model => model.IdHotel, "", new { @class = "text-danger" })
            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateDebut, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateDebut, new { htmlAttributes = new { @class = "form-control", id = "champDateDebut" } })
                @Html.ValidationMessageFor(model => model.DateDebut, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateFin, new { htmlAttributes = new { @class = "form-control", id = "champDateFin" } })
                @Html.ValidationMessageFor(model => model.DateFin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Valeur, htmlAttributes: new { @class = "control-label col-md-2" }, labelText:"Réduction en pourcents")
            <div class="col-md-10">
                @Html.EditorFor(model => model.Valeur, new { htmlAttributes = new { @class = "form-control", step="5" } })
                @Html.ValidationMessageFor(model => model.Valeur, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ajouter" class="btn btn-default" />
            </div>
        </div>
    </div>
}

