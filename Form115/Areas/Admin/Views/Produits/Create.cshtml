@model DataLayer.Models.Produits

@{
    ViewBag.Title = "Create";
}

<h2>Mise en vente d'un séjour</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdSejour, "IdSejour", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdSejour", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdSejour, "", new { @class = "text-danger" })
                <div id="IdHotel"></div>
                
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.NbPlaces," Disponibilité " , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NbPlaces, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NbPlaces, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DateDepart,"Date de Départ" , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateDepart, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateDepart, "", new { @class = "text-danger", @id = "DateDepart" })
            </div>
        </div>

       
        <div class="form-group">
            @Html.LabelFor(model => model.Prix,"Prix (€)" , htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Prix, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prix, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Retour à l'index", "Index")
</div>

@section scripts {
    
    
<script src="~/Scripts/Admin/VenteProduit.js"></script>
<script src="~/Scripts/DatePicker/js/bootstrap-datepicker.min.js"></script>
}
@section styles{

   
<link href="~/Scripts/DatePicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />

}


